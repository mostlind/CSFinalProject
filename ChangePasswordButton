JButton = changePWButton = new JButton("Change Password");

private class ChangePasswordListener implements ActionListener{
	
	@Override
	public void actionPerformed(ActionEvent evt){
		new ChangePasswordWindow();
		
	public void actionPerformed(ActionEvent evt){
		new ChangePasswordPanel;
	}
	
	private class ChangePasswordWindow extends JFrame implements ActionListener{
	private class ChangePasswordPanel implements ActionListener{
		
		JTextField oldPassword = new JTextField(30);
		JTextField newPassword = new JTextField(30);
		JTextField confirmNewPassword = new JTextField(30);
		JButton submitButton = new JButton("Change Password");
		JLabel oldPasswordLabel = new JLabel("Old Password: ");
		JLabel newPasswordLabel = new JLabel("New Password: ");
		JLabel confirmNewPasswordLabel = new JLabel("Confirm New Password: ");
		
		private ChangePasswordWindow(){
			
			setLayout(new FlowLayout());
		
		private ChangePasswordPanel() {
			
			oldPassword.addActionListener(this);
			newPassword.addActionListener(this);
			confirmNewPassword.addActionListener(this);
			changePasswordButton.addActionListener(this);
			
			add(oldPassword);
			add(newPassword);
			add(confirmNewPassword);
			add(oldPasswordLabel);
			add(newPasswordLabel);
			add(confirmNewPasswordLabel);
			add(submitButton);
			
			setVisible(true);
			
			setSize(500, 220);}
		
		infoPanel.removeAll();
		infoPanel.add(oldPassword, BorderLayout.CENTER);
		infoPanel.add(newPassword, BorderLayout.CENTER);
		infoPanel.add(confirmNewPassword, BorderLayout.CENTER);
		infoPanel.add(oldPasswordLabel, BorderLayout.WEST);
		infoPanel.add(newPasswordLabel, BorderLayout.WEST);
		infoPanel.add(confirmNewPasswordLabel, BorderLayout.WEST);
		infoPanel.add(submitButton, BorderLayout.SOUTH);
		
		infoPanel.revalidate();
		infoPanel.repaint();
	}
	
	public void actionPerformed(ActionEvent evt) {
		
		submitButton.addActionListener(new ActionListener()){
		
		@Override
		public void actionPerformed(ActionEvent evt){
			
			String userPath = System.getProperty("user.dir");
			
			Scanner Password = null;
			
			File Information = new File(userPath, "loginInfo.txt");
			
			try{
				Password = new Scanner(Information);
			}
			catch(FileNotFoundException e){
				System.out.println("File does not exist");
			}
			
			while(Password.hasNext()){
				
				if (accountNumber == Password.nextInt())
			
				if (!oldPassword.getText().equals(Password.next()){
					JOptionPane.showMessageDialogue(this, "Please enter your current password.")
				}
				}
				
				else if (!newPassword.getText().equals(confirmNewPassword.getText())){
					JOptionPane.showMessageDialogue(this, "Please confirm new password.")
				}
				}
				
				else {
					Scanner login = new Scanner("login.txt");
					
					a.replaceAll(Password, newPassword.getText());
						
					}
					
				}
				BankOptions.this.setVisible(true);
